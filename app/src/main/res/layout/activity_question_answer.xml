                            android:layout_weight="0.5"
                            android:layout_marginStart="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_below="@id/lay2"
                        android:weightSum="1"
                        android:orientation="horizontal"
                        android:id="@+id/lay3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <CheckBox
