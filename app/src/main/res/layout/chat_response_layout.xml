<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/rcv_txtLayout1"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="60dp"
        android:paddingStart="18dp"
        android:layout_margin="5dp"
        android:paddingEnd="10dp"
        android:background="@drawable/chat_response_background">

        <TextView
            android:id="@+id/tv_response_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:textSize="16sp"
            android:maxLength="300"
            android:textColor="#FFF"/>
        <TextView
            android:id="@+id/tv_response_date_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:textSize="12sp"
            android:textColor="#FFF"
            android:text=""/>

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="5dp" />

    <LinearLayout
        android:id="@+id/rcv_imageLayout"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:paddingStart="10dp"
        android:visibility="gone"
        android:paddingEnd="18dp"
        android:background="@drawable/chat_response_background">

        <ImageView
            android:id="@+id/rcv_background"
            android:layout_width="200dp"
            android:layout_height="180dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/loading_thumbnail"
            android:scaleType="fitXY"
            />
        <TextView
            android:id="@+id/rcv_tv_input_date_time1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:textSize="12sp"
            android:textColor="#FFF"
            android:text=""/>

    </LinearLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="5dp" />

    <LinearLayout
        android:id="@+id/rcv_imageLayout1"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:paddingStart="10dp"
        android:visibility="gone"
        android:paddingEnd="18dp"
        android:background="@drawable/chat_response_background">

        <ImageView
            android:id="@+id/rcv_background1"
            android:layout_width="200dp"
            android:layout_height="180dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/loading_thumbnail"
            android:scaleType="fitXY"
            />
        <TextView
            android:id="@+id/rcv_tv_input_date_time2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#FFF"
            android:gravity="start"
            android:text=""/>

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="5dp" />

    <LinearLayout
        android:id="@+id/rc_pdfLayout"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:visibility="gone"
        android:background="@drawable/chat_response_background">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginEnd="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/rpdfview"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/pdf"
            />
        <TextView
            android:id="@+id/tvFileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:text=""
            android:textColor="#FFF"
            android:textSize="12sp" />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_input_date_time3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="6dp"
            android:text=""
            android:textColor="#FFF"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>