<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/tileRelative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:padding="4dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/header_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/ChildCategoryName"
                style="@style/Caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="1dp"
                android:layout_weight="0.3"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="center_vertical"
                android:text="Laminated Playwood"
                android:textSize="@dimen/_11ssp" />

            <TextView
                android:id="@+id/outbox_date_txt"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_weight="0.7"
                android:gravity="center_vertical|end"
                android:text="28-08-2020 12:49 "
                android:textSize="@dimen/_9ssp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/header_layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header_layout"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_weight="0.1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/Business_Demand"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/poppins_regular"
                    android:maxLines="1"
                    android:text="Less than 1 lakh"
                    android:textColor="@color/red"
                    android:textSize="@dimen/_9ssp" />

                <TextView
                    android:id="@+id/chat_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/poppins_regular"
                    android:maxLines="1"
                    android:text="Hubli"
                    android:textColor="#7A7D7D"
                    android:textSize="@dimen/_9ssp" />

                <TextView
                    android:id="@+id/enq_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/poppins_regular"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="#7A7D7D"
                    android:textSize="@dimen/_9ssp" />

                <TextView
                    android:id="@+id/enq_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/poppins_regular"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="#7A7D7D"
                    android:textSize="@dimen/_9ssp" />

                <TextView
                    android:id="@+id/trans_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/poppins_regular"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="#7A7D7D"
                    android:textSize="@dimen/_9ssp" />
            </LinearLayout>

            <TextView
                android:id="@+id/textNotifycount"
                android:layout_width="260dp"
                android:layout_height="26dp"
                android:layout_gravity="center"
                android:layout_weight="0.9"
                android:background="@drawable/circle_notification_drawable"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center"
                android:text="12"
                android:textColor="@color/white"
                android:textSize="@dimen/_9ssp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_below="@+id/header_layout1"
            android:background="@color/colorLightGray" />
    </RelativeLayout>
</FrameLayout>