<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="end"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/txtLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/chat_input_background"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:paddingStart="10dp"
        android:paddingEnd="18dp">

        <TextView
            android:id="@+id/tv_input_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:maxLength="300"
            android:text="Input Text"
            android:textColor="#FFF"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_input_date_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text=""
            android:textColor="#FFF"
            android:textSize="12sp" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="5dp" />

    <LinearLayout
        android:id="@+id/imageLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/chat_input_background"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingEnd="18dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/background"
            android:layout_width="200dp"
            android:layout_height="180dp"
            android:layout_marginTop="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/loading_thumbnail" />

        <TextView
            android:id="@+id/tv_input_date_time1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text=""
            android:textColor="#FFF"
            android:textSize="12sp" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="5dp" />

    <LinearLayout
        android:id="@+id/imageLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/chat_input_background"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingEnd="18dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/background1"
            android:layout_width="200dp"
            android:layout_height="180dp"
            android:layout_marginTop="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/loading_thumbnail" />

        <TextView
            android:id="@+id/tv_input_date_time2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text=""
            android:textColor="#FFF"
            android:textSize="12sp" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="5dp" />

    <LinearLayout
        android:id="@+id/ic_pdfLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:background="@drawable/chat_input_background"
        android:orientation="vertical"
        android:layout_margin="4dp"
        android:visibility="gone">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginEnd="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ipdfview"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:scaleType="fitXY"
                android:gravity="center"
                android:layout_gravity="center"
                android:src="@drawable/pdf" />

            <TextView
                android:id="@+id/tvFileName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:text=""
                android:textColor="#FFF"
                android:textSize="12sp" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_input_date_time3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="10dp"
            android:text=""
            android:textColor="#FFF"
            android:textSize="12sp" />

    </LinearLayout>
</LinearLayout>