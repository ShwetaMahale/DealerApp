<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Dashboard.EnquiryReceived.EnquiryReceivedChatActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/chat_design"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_search_box"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:backgroundTint="#00FFFFFF"
            android:hint="@string/txt_typemsg"
            android:fontFamily="@font/roboto_regular"
            android:imeOptions="actionDone"
            android:inputType="textMultiLine|textCapSentences"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:singleLine="false" />

        <ImageView
            android:id="@+id/attach_image"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_gravity="center"
            android:layout_marginEnd="12dp"
            android:padding="@dimen/_2sdp"
            android:rotation="@integer/google_play_services_version"
            android:src="@drawable/baseline_attach_file_24"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/add_image"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_gravity="center"
            android:layout_marginEnd="12dp"
            android:background="@drawable/baseline_camera_alt_24"
            android:padding="@dimen/_2sdp"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/add_image1"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_gravity="center"
            android:layout_marginEnd="12dp"
            android:background="@drawable/ic_baseline_send_24"
            android:visibility="visible" />
    </LinearLayout>
    <!--   </androidx.cardview.widget.CardView>-->

</LinearLayout>