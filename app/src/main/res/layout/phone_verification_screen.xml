<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_nav_back"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_circle_grey_light"
            android:padding="@dimen/_4sdp"
            app:srcCompat="@drawable/back_white"
            app:tint="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"

            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:text="Continue with Phone"
            android:textColor="#1F1F39"
            android:textSize="18dp" />
    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="55dp"
        android:src="@drawable/illustration" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:text="Enter Your  Phone Number"
        android:textColor="#858597"
        android:textSize="14dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="55dp"
        android:background="@drawable/phone_dr"
        app:cardCornerRadius="20dp">

        <RelativeLayout
            android:layout_width="match_parent"

            android:layout_height="50dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/coutry_cp"
                android:layout_width="wrap_content"

                android:layout_height="match_parent"
                android:background="#EFEFEF"
                android:gravity="center"

                android:padding="13dp"
                android:text="+91"
                android:textColor="#1F1F39" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/phoneEv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_toStartOf="@id/ctnBtn"
                android:layout_toEndOf="@id/coutry_cp"
                android:background="@null"
                android:hint="222 234 1212"
                android:inputType="number"
                android:textColor="@color/black" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/ctnBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:background="@drawable/red_btn"
                android:paddingHorizontal="25dp"
                android:text="Continue"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16dp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</androidx.appcompat.widget.LinearLayoutCompat>